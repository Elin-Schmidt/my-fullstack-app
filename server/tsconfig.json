{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "types": ["node"],
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
