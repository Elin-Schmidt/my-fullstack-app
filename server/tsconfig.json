{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*", "src/**/*.js"],
    "exclude": ["node_modules", "dist"],
    "scripts": {
        "start": "node dist/index.js"
    }
}
